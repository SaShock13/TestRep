<Window x:Class="SkillboxHomework10_1.TransferMoneyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SkillboxHomework10_1"
        mc:Ignorable="d"
        Title="TransferMoneyWindow" Height="400" Width="350">
    <Grid>
        <StackPanel>
            <ComboBox Name="cbTargetClient" HorizontalAlignment="Center" Margin="0,30,0,30" Width="120" SelectionChanged="cbTargetClient_SelectionChanged"/>
            <ComboBox Name="cbTargetAcc" HorizontalAlignment="Center" Margin="0,30,0,30" Width="120"/>
            <TextBox Name="tbAmount" HorizontalAlignment="Center" Margin="0,30,0,30" Text="1000" Width="120"/>
            <Button Name="btnOK" Content="OK" Margin="0,20,0,0" HorizontalAlignment="Center" Click="btnOK_Click" />
        </StackPanel>
        


    </Grid>
</Window>
