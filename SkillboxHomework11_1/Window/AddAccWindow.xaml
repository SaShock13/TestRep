<Window x:Class="SkillboxHomework10_1.AddAccWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SkillboxHomework10_1"
        mc:Ignorable="d"
        Title="AddAccWindow" Height="300" Width="300">
    <Grid>
        <StackPanel>
            <ComboBox Name="cbAccType" Margin="0,50,0,25" VerticalAlignment="Top" Width="130" >
                <TextBlock Name="cbDep" >Депозитный</TextBlock>
                <TextBlock Name="cbNonDep"  >Недепозитный</TextBlock>
            </ComboBox>
            <TextBlock HorizontalAlignment="Center" Margin="0,0,0,0" TextWrapping="Wrap" TextAlignment="Center" ><Run Text="Количество денег "/><Run Language="ru-ru" Text="на счёте"/></TextBlock>
            <TextBox Name="tbMoneyAmount" Text="1000" HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" TextAlignment="Center" Width="100" />
            <Button x:Name="btnCreateAcc" Content="Создать" Margin="0,30,0,0" Click="Button_Click" Width="100" Height="32"/>


        </StackPanel>

    </Grid>
</Window>
